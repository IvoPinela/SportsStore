
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductCategory</td>
                <td>@product.ProductPrice</td>
            </tr>
        }
    </tbody>

</table>

